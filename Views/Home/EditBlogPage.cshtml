@model m21_e2_WEB.Models.MainClass

@{
    ViewBag.Title = @Model.siteText.MainPage_BlogLinkText;
}

<div class="navigation">
    <a method="get" asp-controller="Home" asp-action="MainPage">@Model.siteText.MainPage_MainLinkText</a>
    ->
    <a method="get" asp-controller="Home" asp-action="ServicesPage">@Model.siteText.MainPage_BlogLinkText</a>
    ->
    Редактирование
</div>

<form asp-action="EditBlog" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div hidden>
        <input type="text" asp-for="blog.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="blogViewModel.BlogTitle" class="control-label">Заголовок</label>
        <input required type="text" asp-for="blogViewModel.BlogTitle" value="@Model.blog.BlogTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="blog.BlogDescription" class="control-label">Описание</label>        
        <textarea required type="text" asp-for="blog.BlogDescription" class="form-control">@Model.blog.BlogDescription</textarea>
    </div>
    <div>
        <label asp-for="blogViewModel.PictureFile" class="control-label">Изображение</label>
        <input type="file" asp-for="blogViewModel.PictureFile" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </div>
</form>
<br />

<form asp-action="BlogPage" asp-controller="Home">
    <input type="submit" value="Отменить" class="btn btn-primary" />
</form>