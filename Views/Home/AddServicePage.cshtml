@model m21_e2_WEB.Models.MainClass

@{
    ViewBag.Title = Model.siteText.MainPage_ServicesLinkText;
}

<div class="navigation">
    <a method="get" asp-controller="Home" asp-action="MainPage">@Model.siteText.MainPage_MainLinkText</a>
    ->
    <a method="get" asp-controller="Home" asp-action="ServicesPage">@Model.siteText.MainPage_ServicesLinkText</a>
    ->
    Добавление
</div>

<form asp-action="AddService" asp-controller="Home">
    <div class="form-group">
        <label asp-for="service.ServiceTitle" class="control-label">Заголовок</label>
        <input required type="text" asp-for="service.ServiceTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="service.ServiceDescription" class="control-label">Описание</label>        
        <textarea required type="text" asp-for="service.ServiceDescription" class="form-control"></textarea>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </div>
</form>
<br />

<form asp-action="ServicesPage" asp-controller="Home">
    <input type="submit" value="Отменить" class="btn btn-danger" />
</form>